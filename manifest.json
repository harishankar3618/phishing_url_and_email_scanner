{
    "manifest_version": 3,
    "name": "PhishShield",
    "version": "1.0",
    "description": "Detects phishing sites and emails using Google Safe Browsing.",
    "permissions": ["declarativeNetRequest","scripting","declarativeNetRequestWithHostAccess","storage", "activeTab", "tabs","notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["https://safebrowsing.googleapis.com/","<all_urls>"],
    "content_scripts": [
    {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
    }
],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
    } 
     
      
  }
  